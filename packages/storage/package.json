{
  "name": "@igniter-js/storage",
  "version": "0.1.1",
  "description": "Type-safe, adapter-based file storage library for Igniter.js with S3 and Google Cloud Storage support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "AGENTS.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/shim.js",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "browser": "./dist/shim.js",
      "import": "./dist/adapters/index.mjs",
      "require": "./dist/adapters/index.js"
    },
    "./telemetry": {
      "types": "./dist/telemetry/index.d.ts",
      "browser": "./dist/shim.js",
      "import": "./dist/telemetry/index.mjs",
      "require": "./dist/telemetry/index.js"
    },
    "./adapters/*": {
      "types": "./dist/adapters/*.d.ts",
      "browser": "./dist/shim.js",
      "import": "./dist/adapters/*.mjs",
      "require": "./dist/adapters/*.js"
    }
  },
  "browser": {
    "./dist/index.js": "./dist/shim.js",
    "./dist/adapters/index.js": "./dist/shim.js",
    "./dist/telemetry/index.js": "./dist/shim.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "igniter",
    "igniterjs",
    "storage",
    "file-upload",
    "s3",
    "google-cloud-storage",
    "file-storage",
    "cloud-storage",
    "typescript"
  ],
  "author": "Felipe Barcelos <felipebarcelospro@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/felipebarcelospro/igniter-js.git",
    "directory": "packages/storage"
  },
  "bugs": {
    "url": "https://github.com/felipebarcelospro/igniter-js/issues"
  },
  "homepage": "https://igniterjs.com",
  "dependencies": {
    "mime-types": "^3.0.2"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.645.0",
    "@aws-sdk/lib-storage": "^3.645.0",
    "@google-cloud/storage": "^7.12.1",
    "@igniter-js/core": "*",
    "@igniter-js/telemetry": "*",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^22.7.5",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4",
    "zod": "^4.2.1"
  },
  "peerDependencies": {
    "@igniter-js/core": ">=0.3.40",
    "@igniter-js/telemetry": ">=0.1.0",
    "zod": ">=4.2.1"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-s3": {
      "optional": true
    },
    "@aws-sdk/lib-storage": {
      "optional": true
    },
    "@google-cloud/storage": {
      "optional": true
    },
    "@igniter-js/telemetry": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
