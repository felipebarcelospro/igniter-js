{
  "name": "@igniter-js/agents",
  "version": "0.1.0",
  "description": "Type-safe AI agent framework for Igniter.js with MCP integration, custom toolsets, and memory system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "AGENTS.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/shim.js",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./telemetry": {
      "types": "./dist/telemetry/index.d.ts",
      "browser": "./dist/shim.js",
      "import": "./dist/telemetry/index.mjs",
      "require": "./dist/telemetry/index.js"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "browser": "./dist/shim.js",
      "import": "./dist/adapters/index.mjs",
      "require": "./dist/adapters/index.js"
    }
  },
  "browser": {
    "./dist/index.js": "./dist/shim.js",
    "./dist/adapters/index.js": "./dist/shim.js",
    "./dist/telemetry/index.js": "./dist/shim.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "igniter",
    "igniterjs",
    "agent",
    "ai",
    "mcp",
    "tools",
    "llm",
    "openai",
    "anthropic",
    "vercel-ai",
    "typescript",
    "type-safe"
  ],
  "author": "Felipe Barcelos <felipebarcelospro@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/felipebarcelospro/igniter-js.git",
    "directory": "packages/agent"
  },
  "bugs": {
    "url": "https://github.com/felipebarcelospro/igniter-js/issues"
  },
  "homepage": "https://igniterjs.com",
  "devDependencies": {
    "@ai-sdk/mcp": "^0.0.12",
    "@igniter-js/core": "*",
    "@igniter-js/telemetry": "*",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@types/node": "^22.7.5",
    "ai": "^6.0.3",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.16",
    "zod": "^4.2.1"
  },
  "peerDependencies": {
    "@ai-sdk/mcp": "^0.0.12",
    "@igniter-js/core": ">=0.2.0",
    "@igniter-js/telemetry": ">=0.1.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "ai": "^6.0.3",
    "zod": "^4.2.1"
  },
  "peerDependenciesMeta": {
    "@igniter-js/telemetry": {
      "optional": true
    },
    "@modelcontextprotocol/sdk": {
      "optional": true
    },
    "@ai-sdk/mcp": {
      "optional": true
    },
    "ai": {
      "optional": false
    },
    "zod": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
