{
  "extends": "@igniter-js/typescript-config/base.json",
  "compilerOptions": {
    "baseUrl": "",
    "outDir": "dist",
    "rootDir": "src",
    "module": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "nodenext",
    "jsx": "react",
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/*.spec.*",
    "**/test/**",
    "**/tests/**",
    "**/__tests__/**"
  ]
}
