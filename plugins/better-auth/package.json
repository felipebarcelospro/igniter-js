{
  "name": "@igniter-js/plugin-better-auth",
  "version": "0.0.3",
  "description": "Igniter.js plugin that wires BetterAuth API into an 'auth' controller automatically.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "AGENTS.md"
  ],
  "scripts": {
    "dev": "tsup src/index.ts --dts --format esm,cjs --out-dir dist --watch",
    "build": "tsup src/index.ts --dts --format esm,cjs --out-dir dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "@igniter-js/core": "*",
    "better-auth": "*"
  },
  "devDependencies": {
    "@igniter-js/core": "*",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "keywords": [
    "igniter-js",
    "better-auth",
    "plugin",
    "typescript"
  ]
}
